<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PythonFragment">

    <ImageView
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/python" />

    <TextView
        android:id="@+id/dtv1"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thiết kế bởi: Guido van Rossum"
        android:layout_below="@+id/image2"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/dtv2"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhà phát triển: Python Software Foundation"
        android:layout_below="@+id/dtv1"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/dtv3"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kiểm tra kiểu: Duck, dynamic, strong since version 3.5: Gradual) "
        android:layout_below="@+id/dtv2"
        android:textColor="@color/black"/>
</RelativeLayout>